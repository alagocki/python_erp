create table artikel
(
    id                                                 int(10) auto_increment
    nummer                                             varchar(255)                               not null,
    projekt                                            int                                        not null,
    name_de                                            varchar(255)                               not null,
    name_en                                            varchar(255)                               not null,
    beschreibung_de                                    text                                       not null,
    beschreibung_en                                    text                                       not null,
    hersteller                                         varchar(255)                               not null,
    gewicht                                            double         default 0                   null,
    porto                                              int(1)                                     not null,
    gesperrt                                           int(1)                                     not null,
    geloescht                                          int            default 0                   not null,
    umsatzsteuer                                       varchar(255)                               not null,
    adresse                                            int                                        not null,
    herstellerbestand_lshop                            int(8)                                     null,
    herstellerbestand_continental                      int(8)                                     null,
    herstellerbestand_stanley                          int(8)                                     null,
    herstellerbestand_maprom                           int(8)                                     null,
);

select id, nummer, projekt, name_de, name_en, beschreibung_de, beschreibung_en, hersteller, gewicht, porto, gesperrt, geloescht, umsatzsteuer, adresse, herstellerbestand_lshop, herstellerbestand_continental, herstellerbestand_stanley, herstellerbestand_maprom from artikel